#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main()
{
    char str[100];
    int i;

    printf("Enter a string: ");
    scanf("%[^\n]", str);

    for(i=0; i<strlen(str); i++)
    {
        str[i] = tolower(str[i]);
    }

    printf("String in lowercase: %s", str);

    return 0;
}

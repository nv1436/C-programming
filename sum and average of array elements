#include <stdio.h>

int main() {
    int array[50], size, i;
    float sum = 0, average;
    
    printf("Enter the number of elements in the array: ");
    scanf("%d", &size);
    
    printf("Enter the elements of the array: ");
    for(i=0; i<size; i++) {
        scanf("%d", &array[i]);
        sum += array[i];
    }
    
    average = sum / size;
    
    printf("The sum of the elements in the array is: %.2f\n", sum);
    printf("The average of the elements in the array is: %.2f\n", average);
    
    return 0;
}
